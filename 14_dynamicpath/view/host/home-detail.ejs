<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= pageTitle %> Â· Airbnb</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen">

  <!-- Header -->
  <header class="bg-white border-b">
    <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
      <h1 class="text-2xl font-semibold text-rose-500">airbnb</h1>
      <nav>
        <!-- Host Home -->
        <a href="/host/home-list"
          class="text-gray-700 hover:text-black transition">
          Host Home
        </a>
        <a href="/host/add-home"
          class="px-5 py-2 bg-rose-500 text-white rounded-lg font-medium hover:bg-rose-600 transition">
          Add your home
        </a>
        <a href="/host/home-list"
          class="px-5 py-2 bg-gray-500 text-white rounded-lg font-medium hover:bg-gray-600 transition ml-4">
          View Homes
        </a>
      </nav>
    </div>
  </header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-6 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

      <!-- Image Gallery -->
      <div class="space-y-4">
        <% if (home.images && home.images.length > 0) { %>
          <% home.images.forEach(function(img, index){ %>
            <img
              src="/uploads/<%= img.replace('/uploads/', '') %>"
              class="w-full h-64 object-cover rounded-lg"
              alt="Home Image <%= index + 1 %>"
            />
          <% }) %>
        <% } else { %>
          <img
            src="https://png.pngtree.com/png-vector/20190820/ourmid/pngtree-no-image-vector-illustration-isolated-png-image_1694547.jpg"
            class="w-full h-64 object-cover rounded-lg"
            alt="Default Home Image"
          />
        <% } %>
      </div>

      <!-- Details -->
      <div class="space-y-6">
        <h1 class="text-4xl font-semibold text-gray-900">Title :- <%= home.title %></h1>
        <p class="text-gray-600 text-lg">Description :- <%= home.description %></p>
        <p class="text-gray-500">Location:- <%= home.location %></p>
        <p class="text-2xl font-bold text-rose-500">Home Price-$<%= home.price %> / night</p>

        <!-- Actions -->
        <div class="flex gap-4">
          <a href="/host/edit-home/<%= home.id %>"
            class="px-4 py-2 bg-blue-500 text-white rounded-lg hover:bg-blue-600 transition">
            Edit Home
          </a>
        </div>
      </div>

    </div>
  </main>

</body>
</html>
