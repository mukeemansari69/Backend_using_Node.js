<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= pageTitle %> Â· Airbnb</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen">

  <!-- Header -->
 <header class="bg-white border-b sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">

    <!-- Logo -->
    <a href="/" class="text-2xl font-bold text-rose-500 tracking-tight">
      airbnb
    </a>

    <!-- Navigation -->
    <nav class="flex items-center gap-6 text-sm font-medium">

      <!-- Home -->
      <a href="/"
        class="text-gray-700 hover:text-black transition">
        Home
      </a>

      <!-- Bookings -->
      <a href="/bookings"
        class="text-gray-700 hover:text-black transition">
        Bookings
      </a>

      <!-- Favourites -->
      <a href="/favorite-list"
        class="text-gray-700 hover:text-black transition">
        Favourites
      </a>

      <!-- Divider -->
      <span class="h-6 w-px bg-gray-300"></span>

      <!-- Add Home Button -->
      <a href="/host/add-home"
        class="px-4 py-2 bg-rose-500 text-white rounded-full font-semibold hover:bg-rose-600 transition shadow-sm">
        Add your home
      </a>

    </nav>
  </div>
</header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-6 py-20">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">

      <!-- Image Gallery -->
      <div class="space-y-4">
        <% if (home.images && home.images.length > 0) { %>
          <% home.images.forEach(function(img, index){ %>
            <img
              src="/uploads/<%= img.replace('/uploads/', '') %>"
              class="w-full h-64 object-cover rounded-lg"
              alt="Home Image <%= index + 1 %>"
            />
          <% }) %>
        <% } else { %>
          <img
            src="/default.jpg"
            class="w-full h-64 object-cover rounded-lg"
            alt="Default Home Image"
          />
        <% } %>
      </div>

      <!-- Details -->
      <div class="space-y-6">
        <h1 class="text-4xl font-semibold text-gray-900"><%= home.title %></h1>
        <p class="text-gray-600 text-lg"><%= home.description %></p>
        <p class="text-gray-500">Location: <%= home.location %></p>
        <p class="text-2xl font-bold text-rose-500">$<%= home.price %> / night</p>

        <!-- Actions -->
        <div class="flex gap-4">
          <form action="/reserve/<%= home.id %>" method="POST" class="flex-1">
            <button type="submit" class="w-full py-3 bg-rose-500 text-white rounded-lg font-medium hover:bg-rose-600 transition">
              Reserve Now
            </button>
          </form>
          <form action="/favorite/<%= home.id %>" method="POST" class="flex-1">
            <button type="submit" class="w-full py-3 bg-gray-200 text-gray-800 rounded-lg font-medium hover:bg-gray-300 transition">
              Add to Favorites
            </button>
          </form>
        </div>
      </div>

    </div>
  </main>

</body>
</html>
