<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Reserve Home Â· Airbnb</title>

  <!-- Tailwind CSS CDN -->
  <script src="https://cdn.tailwindcss.com"></script>

  <!-- Font -->
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">

  <style>
    body {
      font-family: 'Inter', sans-serif;
    }
  </style>
</head>

<body class="bg-gray-50 min-h-screen">

  <!-- Header -->
 <header class="bg-white border-b sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">

    <!-- Logo -->
    <a href="/" class="text-2xl font-bold text-rose-500 tracking-tight">
      airbnb
    </a>

    <!-- Navigation -->
    <nav class="flex items-center gap-6 text-sm font-medium">

      <!-- Home -->
      <a href="/"
        class="text-gray-700 hover:text-black transition">
        Home
      </a>

      <!-- Bookings -->
      <a href="/bookings"
        class="text-gray-700 hover:text-black transition">
        Bookings
      </a>

      <!-- Favourites -->
      <a href="/favorite-list"
        class="text-gray-700 hover:text-black transition">
        Favourites
      </a>

      <!-- Divider -->
      <span class="h-6 w-px bg-gray-300"></span>

      <!-- Add Home Button -->
      <a href="/host/add-home"
        class="px-4 py-2 bg-rose-500 text-white rounded-full font-semibold hover:bg-rose-600 transition shadow-sm">
        Add your home
      </a>

    </nav>
  </div>
</header>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto px-6 py-20">
    <div class="max-w-md mx-auto bg-white rounded-2xl shadow-sm p-8">

      <h2 class="text-2xl font-semibold text-gray-900 mb-2">
        Reserve this home
      </h2>

      <p class="text-gray-500 mb-6">
        Confirm your reservation details.
      </p>

      <form action="/reserve/<%= home.id %>" method="POST" class="space-y-6">

        <!-- Check-in Date -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Check-in Date
          </label>
          <input
            type="date"
            name="checkin"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500"
          />
        </div>

        <!-- Check-out Date -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Check-out Date
          </label>
          <input
            type="date"
            name="checkout"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500"
          />
        </div>

        <!-- Guests -->
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">
            Number of Guests
          </label>
          <input
            type="number"
            name="guests"
            min="1"
            value="1"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-rose-500"
          />
        </div>

        <!-- Submit Button -->
        <button
          type="submit"
          class="w-full py-3 bg-rose-500 text-white rounded-lg font-medium hover:bg-rose-600 transition"
        >
          Confirm Reservation
        </button>

      </form>

    </div>
  </main>

</body>
</html>
